<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShapeCalculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShapeCalculator"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="LightSeaGreen">

    <Shell.BindingContext>
    </Shell.BindingContext>
    
    <Shell.MenuBarItems>
        <MenuBarItem Text="Shape Calculator">
            <MenuFlyoutItem Text="Triangle"/>
            <MenuFlyoutItem Text="Square"
                            Command="{Binding SquareCommand}"/>
            <MenuFlyoutItem Text="Rectangle"/>
            <MenuFlyoutItem Text="Circle"/>
        </MenuBarItem>
    </Shell.MenuBarItems>
    
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


</Shell>
