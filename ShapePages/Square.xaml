<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShapeCalculator.Square"
             xmlns:viewmodel="clr-namespace:ShapeCalculator.ViewModels"
             x:DataType="viewmodel:SquareViewModel">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout HorizontalOptions="Center">
        <Entry Text="{Binding SideSquare}"
               WidthRequest="200"/>
        <Label Text="{Binding AreaSquare}"/>
        <Label Text="{Binding PerimeterSquare}"/>
        <Label Text="{Binding VolumeSquare}"/>
        <Button Text="Calculate"
            Command="{Binding CalculateSquareCommand}"/>
        <Button Text="Clear"
            Command="{Binding ClearSquareCommand}"/>
    </VerticalStackLayout>
</ContentPage>