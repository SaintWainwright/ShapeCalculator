<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShapeCalculator.Circle"
             xmlns:viewmodel="clr-namespace:ShapeCalculator.ViewModels"
             x:DataType="viewmodel:CircleViewModel">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout VerticalOptions="Center" WidthRequest="300">
        <Label 
            Text="Welcome to Circle!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="{Binding RadiusCircle}"/>
        <Entry Text="{Binding RadiusCircle}"/>
        <Label Text="{Binding AreaCircle}"
               FontSize="30"/>
        <Button 
            Command="{Binding CalculateAreaCircleCommand}"/>
    </VerticalStackLayout>
</ContentPage>