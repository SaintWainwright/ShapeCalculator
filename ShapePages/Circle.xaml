<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShapeCalculator.Circle"
             xmlns:viewmodel="clr-namespace:ShapeCalculator.ViewModels"
             x:DataType="viewmodel:CircleViewModel">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout VerticalOptions="Center" WidthRequest="300">
        <Label 
            Text="Welcome to Circle!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding RadiusCircle}"/>
        <Label Text="{Binding AreaCircle}"
               FontSize="30"/>
        <Label Text="{Binding PerimeterCircle}"
               FontSize="30"/>
        <Label Text="{Binding VolumeCircle}"
               FontSize="30"/>
        <HorizontalStackLayout>
            <Button 
                    Text="Calculate"
                    Command="{Binding CalculateCircleCommand}"/>
            <Button Text="Clear"
                    Command="{Binding ClearCircleCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>